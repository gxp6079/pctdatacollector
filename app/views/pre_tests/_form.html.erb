<%= form_for(@pre_test) do |f| %>
  <%= render 'shared/form_error_message_listing', object: f.object %>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :html_test %><br>
    <%= f.text_area :html_test, rows: "20" %>
  </p>
  <p>
    <%= f.label :correct_answer %><br>
    <%= f.text_field :correct_answer %>
  </p>
  <p>
    <%= f.label :group %><br>
    <%= f.select :group, options_for_select(User.available_groups(), selected: f.object.group) %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
